                </td>
            </tr>
            <tr><td><br /><td></tr>

            <tr>
                <td>
                    @Html.LabelFor(model => model.d_detail_lkp_date, htmlAttributes: new { @class = "control-label col-md-12" })
                </td>
                <td>
                    @Html.EditorFor(model => model.d_detail_lkp_date, new { htmlAttributes = new { @class = "form-control" } })
                </td>

                <td>
                    @Html.LabelFor(model => model.d_detail_lkp_time, htmlAttributes: new { @class = "control-label col-md-12" })
                </td>
                <td>
                    @Html.EditorFor(model => model.d_detail_lkp_time, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>
            <tr><td><br /><td></tr>

            <tr>
                <td>
                    <hr />
                </td>
            </tr>

            <tr>
                <td>
                    <p style="font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif">Other Details :</p>
                </td>
            </tr>

            <tr>
                <td>
                    @Html.LabelFor(model => model.d_detail_no_of_crew, htmlAttributes: new { @class = "control-label col-md-12" })
                </td>
                <td>
                    @Html.EditorFor(model => model.d_detail_no_of_crew, new { htmlAttributes = new { @class = "form-control" } })
                </td>

                <td>
                    @Html.LabelFor(model => model.d_detail_names_of_crew, htmlAttributes: new { @class = "control-label col-md-12" })
                </td>
                <td>
                    @Html.EditorFor(model => model.d_detail_names_of_crew, new { htmlAttributes = new { @class = "form-control" } })
                </td>

                <td>
                    @Html.LabelFor(model => model.d_detail_communication_freqency, htmlAttributes: new { @class = "control-label col-md-12" })
                </td>
                <td>
                    @Html.EditorFor(model => model.d_detail_communication_freqency, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>
            <tr><td><br /><td></tr>

        </table>
        <hr />


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
