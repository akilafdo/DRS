@model DRS.DataBase.d_detail

@{
    ViewBag.Title = "Action";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Take Actions</h2>

<div>
    <h4>Report</h4>
    <hr />
    <table>

        <tr>
            <td>
                <p style="font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif">Vessel and MCS Center Details :</p>
            </td>
        </tr>

        <tr>
            <td style="font-weight:bold">@Html.DisplayNameFor(model => model.vessel.vessel_no) :-</td>
            <td><span style="margin:5px"></span></td>
            <td>@Html.DisplayFor(model => model.vessel.registration.registration_code)@Html.DisplayFor(model => model.vessel.vessel_no)@Html.DisplayFor(model => model.vessel.district.district_code)</td>
            <td><span style="margin:70px"></span></td>

            <td style="font-weight:bold">@Html.DisplayNameFor(model => model.radio_station.mcs_location) :-</td>
            <td><span style="margin:5px"></span></td>
            <td>@Html.DisplayFor(model => model.radio_station.mcs_location)</td>
        </tr>
        <tr><td><br /><td></tr>

        <tr>
            <td style="font-weight:bold">@Html.DisplayNameFor(model => model.radio_station.mcs_callsign) :-</td>
            <td><span style="margin:5px"></span></td>
            <td>@Html.DisplayFor(model => model.radio_station.mcs_callsign)</td>
        </tr>
        <tr><td><br /><hr /><td></tr>

        <tr>
            <td>
                <p style="font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif">Distress and Depature Details :</p>
            </td>
        </tr>
        <tr><td><br /><td></tr>

        <tr>
            <td style="font-weight:bold">@Html.DisplayNameFor(model => model.distress.distress_name) :-</td>
            <td><span style="margin:5px"></span></td>
            <td>@Html.DisplayFor(model => model.distress.distress_name)</td>
            <td><span style="margin:70px"></span></td>

            <td style="font-weight:bold">@Html.DisplayNameFor(model => model.d_detail_nature_of_distress) :-</td>
            <td><span style="margin:5px"></span></td>
            <td style="width:auto">@Html.DisplayFor(model => model.d_detail_nature_of_distress)</td>
        </tr>
        <tr><td><br /><td></tr>

        <tr>
            <td style="font-weight:bold">@Html.DisplayNameFor(model => model.d_detail_departure_date) :-</td>
            <td><span style="margin:5px"></span></td>
            <td>@Html.DisplayFor(model => model.d_detail_departure_date)</td>
            <td><span style="margin:70px"></span></td>

            <td style="font-weight:bold">@Html.DisplayNameFor(model => model.d_detail_departure_time) :-</td>
            <td><span style="margin:5px"></span></td>
            <td>@Html.DisplayFor(model => model.d_detail_departure_time)</td>
            <td><span style="margin:70px"></span></td>

            <td style="font-weight:bold">@Html.DisplayNameFor(model => model.d_detail_departure_location) :-</td>
            <td><span style="margin:5px"></span></td>
            <td style="width:auto">@Html.DisplayFor(model => model.d_detail_departure_location)</td>
        </tr>
        <tr><td><br /><hr /><td></tr>

        <tr>
            <td>
                <p style="font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif">Last known position Details :</p>
            </td>
        </tr>
        <tr><td><br /><td></tr>

        <tr>
            <td style="font-style:italic; font-weight:bold">Last known position Lattitude Data</td>
        </tr>
        <tr><td><br /><td></tr>
        <tr>
            <td>@Html.DisplayFor(model => model.d_detail_lkp_lat_deg):@Html.DisplayFor(model => model.d_detail_lkp_lat_min)@Html.DropDownListFor(model => model.d_detail_lkp_lat_direction, (SelectList)ViewBag.LattitudeDirections, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })</td>
        </tr>
        <tr><td><br /><td></tr>

        <tr>
            <td style="font-style:italic; font-weight:bold">Last known position Longitude Data</td>
        </tr>
        <tr>
            <td>@Html.DisplayFor(model => model.d_detail_lkp_long_deg):@Html.DisplayFor(model => model.d_detail_lkp_long_min)@Html.DropDownListFor(model => model.d_detail_lkp_long_direction, (SelectList)ViewBag.LongitudeDirections, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })</td>
        </tr>
        <tr><td><br /><td></tr>

        <tr>
            <td style="font-weight:bold">@Html.DisplayNameFor(model => model.d_detail_lkp_date) :-</td>
            <td><span style="margin:5px"></span></td>
            <td>@Html.DisplayFor(model => model.d_detail_lkp_date)</td>
        </tr>
        <tr><td><br /><td></tr>

        <tr>
            <td style="font-weight:bold">@Html.DisplayNameFor(model => model.d_detail_lkp_time) :-</td>
            <td><span style="margin:5px"></span></td>
            <td>@Html.DisplayFor(model => model.d_detail_lkp_time)</td>
        </tr>
        <tr><td><br /><hr /><td></tr>

        <tr>
            <td>
                <p style="font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif">Other Details :</p>
            </td>
        </tr>
        <tr><td><br /><td></tr>

        <tr>
            <td style="font-weight:bold">@Html.DisplayNameFor(model => model.d_detail_communication_freqency) :-</td>
            <td><span style="margin:5px"></span></td>
            <td>@Html.DisplayFor(model => model.d_detail_communication_freqency)</td>
            <td><span style="margin:70px"></span></td>

            <td style="font-weight:bold">@Html.DisplayNameFor(model => model.d_detail_no_of_crew) :-</td>
            <td><span style="margin:5px"></span></td>
            <td>@Html.DisplayFor(model => model.d_detail_no_of_crew)</td>
        </tr>
        <tr><td><br /><td></tr>

        <tr>
            <td style="font-weight:bold">@Html.DisplayNameFor(model => model.d_detail_names_of_crew) :-</td>
            <td><span style="margin:5px"></span></td>
            <td style="width:auto">@Html.DisplayFor(model => model.d_detail_names_of_crew)</td>
        </tr>
        <tr><td><br /><hr /><td></tr>     

    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.d_detail_id)
        @Html.HiddenFor(model => model.vessel_id)
        @Html.HiddenFor(model => model.mcs_id)
        @Html.HiddenFor(model => model.distress_id)
        @Html.HiddenFor(model => model.d_detail_departure_date)
        @Html.HiddenFor(model => model.d_detail_departure_location)
        @Html.HiddenFor(model => model.d_detail_departure_time)
        @Html.HiddenFor(model => model.d_detail_lkp_date)
        @Html.HiddenFor(model => model.d_detail_lkp_lat_deg)
        @Html.HiddenFor(model => model.d_detail_lkp_lat_min)
        @Html.HiddenFor(model => model.d_detail_lkp_lat_direction)
        @Html.HiddenFor(model => model.d_detail_lkp_long_deg)
        @Html.HiddenFor(model => model.d_detail_lkp_long_min)
        @Html.HiddenFor(model => model.d_detail_lkp_long_direction)
        @Html.HiddenFor(model => model.d_detail_lkp_time)
        @Html.HiddenFor(model => model.d_detail_nature_of_distress)
        @Html.HiddenFor(model => model.d_detail_no_of_crew)
        @Html.HiddenFor(model => model.d_detail_names_of_crew)
        @Html.HiddenFor(model => model.d_detail_communication_freqency)
        @Html.HiddenFor(model => model.d_detail_created_by)
        @Html.HiddenFor(model => model.d_detail_created_date)
        @Html.HiddenFor(model => model.d_detail_status)

        <table>
            <tr>
                <td>
                    <p style="font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif">Take Action :</p>
                </td>
            </tr>
            <tr><td><br /><td></tr>

            <tr>
                <td style="font-weight:bold">@Html.DisplayNameFor(model => model.d_detail_action_taken) :-</td>
                <td><span style="margin:5px"></span></td>
                <td style="width:auto">@Html.EditorFor(model => model.d_detail_action_taken, new { htmlAttributes = new { @class = "form-control" } })</td>
                <td><span style="margin:70px"></span></td>

                <td style="font-weight:bold">@Html.DisplayNameFor(model => model.d_detail_remarks) :-</td>
                <td><span style="margin:5px"></span></td>
                <td style="width:auto">@Html.EditorFor(model => model.d_detail_remarks, new { htmlAttributes = new { @class = "form-control" } })</td>
            </tr>
            <tr><td><br /><td></tr>

        </table>

        <div class="form-actions no-color">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    }
</div>
