@model IEnumerable<DRS.DataBase.district>
@using GridMvc.Html
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Vessel Registration Districs</h2>

<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")"></script>
<script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>

<p>
    @Html.ActionLink("Create New", "Create", "Districts", htmlAttributes: new { @class = "btn btn-success btn-primary btn-sm" })
</p>
<div class="code-cut">
    @Html.Grid(Model).Columns(Columns =>{
    Columns.Add(c => c.district_code).Titled("District Code").Filterable(true);
    Columns.Add(c => c.district_name).Titled("District Name").Filterable(true);
    Columns.Add()
        .Titled("")
        .SetWidth(10)
        .Filterable(true)
        .Sanitized(false)
        .Encoded(false)
        .RenderValueAs(c => Html.ActionLink("Edit", "Edit", "Districts", new { id = c.district_id }, htmlAttributes: new { @class = "btn btn-warning btn-primary btn-sm" })
        .ToHtmlString());
    Columns.Add()
        .Titled("")
        .SetWidth(10)
        .Filterable(true)
        .Sanitized(false)
        .Encoded(false)
        .RenderValueAs(c => Html.ActionLink("Details", "Details", "Districts", new { id = c.district_id }, htmlAttributes: new { @class = "btn btn-info btn-primary btn-sm" })
        .ToHtmlString());
    Columns.Add()
        .Titled("")
        .SetWidth(10)
        .Filterable(true)
        .Sanitized(false)
        .Encoded(false)
        .RenderValueAs(c => Html.ActionLink("Delete", "Delete", "Districts", new { id = c.district_id }, htmlAttributes: new { @class = "btn btn-warning btn-danger btn-sm" })
        .ToHtmlString());
}).WithPaging(10).Sortable().Filterable()
</div>
