@model IEnumerable<DRS.DataBase.vessel_owner_ref>

@using GridMvc.Html
@{
    ViewBag.Title = "Vessels";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Vessels of the Owner</h2>

<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")"></script>
<script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>

<div class="code-cut">
    @Html.Grid(Model).Columns(Columns =>
{
    Columns.Add(c => c.owner.owner_name).Titled("Owner Name").Filterable(true);
    Columns.Add(c => c.owner.owner_address).Titled("Resident Address").Filterable(true);
    Columns.Add(c => c.owner.owner_tele).Titled("Telephone No").Filterable(true);
    Columns.Add(c => c.owner.owner_nic).Titled("NIC No").Filterable(true);
    Columns.Add(c => c.vessel.registration.registration_code).Titled("Registration").Filterable(true);
    Columns.Add(c => c.vessel.vessel_no).Titled("Vessel No").Filterable(true);
    Columns.Add(c => c.vessel.district.district_code).Titled("District").Filterable(true);

    Columns.Add()
        .Titled("")
        .SetWidth(10)
        .Filterable(true)
        .Sanitized(false)
        .Encoded(false)
        .RenderValueAs(c => Html.ActionLink("Edit", "Edit", "Vessels", new { id = c.vessel_id }, htmlAttributes: new { @class = "btn btn-warning btn-primary btn-sm" })
        .ToHtmlString());
    Columns.Add()
        .Titled("")
        .SetWidth(10)
        .Filterable(true)
        .Sanitized(false)
        .Encoded(false)
        .RenderValueAs(c => Html.ActionLink("Details", "Details", "Vessels", new { id = c.vessel_id }, htmlAttributes: new { @class = "btn btn-info btn-primary btn-sm" })
        .ToHtmlString());
    Columns.Add()
        .Titled("")
        .SetWidth(10)
        .Filterable(true)
        .Sanitized(false)
        .Encoded(false)
        .RenderValueAs(c => Html.ActionLink("Delete", "Delete", "Vessels", new { id = c.vessel_id }, htmlAttributes: new { @class = "btn btn-danger btn-primary btn-sm" })
        .ToHtmlString());

}).WithPaging(10).Sortable().Filterable()
</div>